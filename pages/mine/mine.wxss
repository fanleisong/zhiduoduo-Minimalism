.UCenter-bg {
    background-size: cover;
    background: #21c761;
    height: 400rpx;
    display: flex;
    justify-content: center;
    padding-top: 40rpx;
    overflow: hidden;
    position: relative;
    flex-direction: column;
    align-items: center;
    color: #fff;
    font-weight: 300;
    text-shadow: 0 0 3px rgba(0,0,0,.3);
}

.UCenter-bg text {
    opacity: .8;
}

.UCenter-bg image {
    width: 200rpx;
    height: 200rpx;
}

.UCenter-bg .gif-wave {
    position: absolute;
    width: 100%;
    bottom: 0;
}

.mapBox,.UCenter-bg .gif-wave,map {
    left: 0;
    z-index: 99;
    mix-blend-mode: screen;
    height: 100rpx;
}

.mapBox,map {
    width: 750rpx;
    height: 300rpx;
}